issn = {20724292},
journal = {Remote Sensing},
keywords = {Hyperspectral library,Intertidal macroalgae,Photosynthetic pigments,Spectral classification},
number = {2},
title = {{New Hyperspectral Procedure to Discriminate Intertidal Macroalgae}},
