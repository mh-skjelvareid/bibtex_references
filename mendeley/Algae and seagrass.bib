issn = {15515036},
journal = {Journal of Coastal Research},
keywords = {Seagrass,bottom reflectance retrieval,hyperspectral remote sensing,hyperspectral vegetation index,submerged aquatic vegetation (SAV)},
month = {may},
number = {3},
