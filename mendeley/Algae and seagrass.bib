issn = {01718630},
keywords = {Coastal bay,Eutrophication,Lagoon,Macroalgae,Nitrogen,Phosphorus,Phytoplankton,Seagrass},
month = {oct},
pages = {1--18},
title = {{Eutrophication in shallow coastal bays and lagoons: The role of plants in the coastal filter}},
