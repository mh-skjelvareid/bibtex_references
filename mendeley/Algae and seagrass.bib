journal = {Estuaries and Coasts},
keywords = {Algal mats,Feedback mechanism,Sediment resuspension,Site selection,Sulfide intrusion,Zostera marina},
month = {sep},
number = {6},
pages = {1712--1731},
publisher = {Springer US},
title = {{Local Regime Shifts Prevent Natural Recovery and Restoration of Lost Eelgrass Beds Along the Swedish West Coast}},
