journal = {Marine Ecology Progress Series},
keywords = {Barren ground,Cancer pagurus,Kelp recovery,Laminaria hyperborea,Predator},
month = {apr},
pages = {207--218},
title = {{Predators of the destructive sea urchin Strongylocentrotus droebachiensis on the Norwegian coast}},
url = {http://www.int-res.com/abstracts/meps/v502/p207-218/},
volume = {502},
year = {2014}
